<header class="{{cssClass}}" autocomplete="off">

  <div class="police-header item-hdr"> {{ localize 'ROL.weapon' }}</div>
  <br>

  <header class="sheet-header">
    <img class="item-image" src="{{item.img}}"  data-action ="onEditImage" data-edit="img" title="{{item.name}}" height="75" width="75"/>

    <div class="skillheader-fields  grid grid-3col">
      <div class="skillname">
          <input name="name" type="text" value="{{item.name}}" placeholder="name"/>
      </div>
      <div></div>
      <div></div>
    </div>  
  </header>
  <div class="skill-resource grid grid-2col"></div>  

  <div class="skill-prop" style="display: block;" data-set="properties">
    <div class="item-label">{{ localize 'ROL.damageType' }}:</div>
          <div class="display-switch {{#if (eq system.damType 'blunt')}} control-active {{/if}}" title = "{{ localize 'ROL.dmgBlunt' }}" data-action="damageType" data-property='blunt'>{{ localize 'ROL.blunt' }}  </div>
          <div class="display-switch {{#if (eq system.damType 'bladed')}} control-active {{/if}}" title = "{{ localize 'ROL.dmgBladed' }}" data-action="damageType" data-property='bladed'>{{ localize 'ROL.bladed' }}  </div>
          <div class="display-switch {{#if (eq system.damType 'ballistic')}} control-active {{/if}}" title = "{{ localize 'ROL.dmgBallistic' }}" data-action="damageType" data-property='ballistic'>{{ localize 'ROL.ballistic' }}  </div>
          <div class="display-switch {{#if (eq system.damType 'magic')}} control-active {{/if}}" title = "{{ localize 'ROL.dmgMagic' }}" data-action="damageType" data-property='magical'>{{ localize 'ROL.magic' }}  </div>
          <div class="display-switch {{#if (eq system.damType 'vorpal')}} control-active {{/if}}" title = "{{ localize 'ROL.dmgVorpal' }}" data-action="damageType" data-property='vorpal'>{{ localize 'ROL.vorpal' }}  </div>
  </div>
  <div class="skill-resource grid grid-2col"></div>  
  
  <div class="skill-prop" style="display: block;" data-set="properties">
    <div class="item-label">{{ localize 'ROL.weaponType' }}:</div>
          <div class="display-switch {{#if (eq system.type 'Melee')}} control-active {{/if}}" data-action="weaponType" data-property='Melee'>{{ localize 'ROL.melee' }}  </div>
          <div class="display-switch {{#if (eq system.type 'Thrown')}} control-active {{/if}}" data-action="weaponType" data-property='Thrown'>{{ localize 'ROL.thrown' }}  </div>
          <div class="display-switch {{#if (eq system.type 'Firearms')}} control-active {{/if}}" data-action="weaponType" data-property='Firearms'>{{ localize 'ROL.firearms' }}  </div>
  </div>    
        <div></div>  
        <br>  


  {{#if isGM}}
    <div class="skill-resource grid grid-2col"> 
    <label class="item-label">{{ localize 'ROL.damage' }}:</label>
      <input class="loc-label-inp" type="text" name="system.damage" value="{{system.damage}}" data-dtype="Number"/>
    <label class="item-label">{{ localize 'ROL.range' }}:</label>
      <input class="loc-label-inp" type="text" name="system.range" value="{{system.range}}"/>
    </div>    
  {{else}} 
    <div class="skill-resource grid grid-2col"> 
      <div class="item-label">{{ localize 'ROL.damage' }}:</div>
        <div class="loc-label-inp">{{system.damage}}</div>
      <div class="item-label">{{ localize 'ROL.range' }}:</div>
        <div class="loc-label-inp">{{system.range}}</div>  
    </div>    
  {{/if}}

    <div class="item-label">{{ localize 'ROL.properties' }}:</div>
      <div></div>
      <div class="skill-prop" style="display: block;" data-set="properties">
        {{#if (eq system.type 'Firearms')}}
          <div class="display-switch {{#if system.semiauto}} control-active {{/if}}" data-action="rateOfFire" data-property='semiauto'>{{ localize 'ROL.semiauto' }}  </div>
          <div class="display-switch {{#if system.automatic}} control-active {{/if}}" data-action="rateOfFire" data-property='automatic'>{{ localize 'ROL.automatic' }}  </div>
        {{/if}}
        {{#unless (eq system.type 'Thrown')}}
          <div class="display-switch {{#if system.signature}} control-active {{/if}}" data-action="itemToggle" data-property='signature'>{{ localize 'ROL.signature' }}  </div>
        {{/unless}}
      </div>  

      <div></div>
      <br>

  {{!-- Description  --}}
    <section class="sheet-body">
      <div class="item-label">{{ localize 'ROL.description' }}:</div>
      <div class="background-doc">
        {{#if editable}}
          <prose-mirror name="system.description" data-document-u-u-i-d="{{item.uuid}}" value="{{system.description}}"
            collaborate="true" toggled="true">
            {{{enrichedDescription}}}
          </prose-mirror>
        {{else}}
          {{{enrichedDescription}}}
        {{/if}}
      </div>
    </section>
  </header>
